{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Wallet",
  "definitions": {
    "Wallet": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "$schema": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "description": "The name of the wallet"
        },
        "company": {
          "type": "string",
          "description": "The name of the company that created the wallet"
        },
        "openSource": {
          "type": "boolean",
          "description": "Whether the wallet is open source or not"
        }
      },
      "required": ["$schema", "name"],
      "title": "Wallet"
    }
  }
}
